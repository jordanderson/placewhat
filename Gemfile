# Gemfile

source "https://rubygems.org"
source "http://gems.github.com"

gem 'sinatra'       # Because this is a Sinatra app, after all 
gem 'redis'         # Because I cache image paths here
gem 'google-search' # Because this is a nice way of abstracting image searches
gem 'mini_magick'   # Because I gotta format images
gem 'json'          # Because this is handy for use with redis
gem 'debugger'      # Because I like to debug when I'm developing
gem 'thin'          # Because I like fast development servers
gem 'sidekiq'       # Because I like to resize images in the background where possible