# Gemfile

source "https://rubygems.org"
source "http://gems.github.com"

gem 'sinatra'       # This is a Sinatra app, after all 
gem 'redis'         # I cache image paths here
gem 'google-search' # This is a nice way of abstracting image searches
gem 'mini_magick'   # I gotta format images
gem 'json'          # This is handy for use with redis
gem 'debugger'      # I like to debug when I'm developing
gem 'thin'          # I like fast development servers
gem 'sidekiq'       # I like to resize images in the background where possible